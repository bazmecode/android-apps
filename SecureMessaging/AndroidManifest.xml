<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.securemessaging"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.securemessaging.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.securemessaging.NewMessageActivity"
            android:label="@string/title_activity_new_message"
            android:parentActivityName="com.example.securemessaging.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.securemessaging.MainActivity" />
        </activity>
        <activity
            android:name="com.example.securemessaging.InboxActivity"
            android:label="@string/title_activity_inbox"
            android:parentActivityName="com.example.securemessaging.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.securemessaging.MainActivity" />
        </activity>
        <activity
            android:name="com.example.securemessaging.SentMessagesActivity"
            android:label="@string/title_activity_sent_messages"
            android:parentActivityName="com.example.securemessaging.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.securemessaging.MainActivity" />
        </activity>
    </application>

</manifest>